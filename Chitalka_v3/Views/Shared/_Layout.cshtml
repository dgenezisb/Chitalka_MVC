<!DOCTYPE html>
<!--эта дичь жрет List.schtml-->
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Читалка</title>
</head>
<body>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="menu" aria-labelledby="offcanvasExampleLabel" style="width:40%;">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Меню Читалки</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Закрыть"></button>
        </div>
        <div class="offcanvas-body">
            <div>
                <h1>User Name<br></h1>
            </div>


            <div class="list-group list-group-flush">
                <button type="button" class="list-group-item list-group-item-action">Онгоинги</button>
                <button type="button" class="list-group-item list-group-item-action">Что выйдет</button>
                <button type="button" class="list-group-item list-group-item-action">Завершенные</button>
                <button type="button" class="list-group-item list-group-item-action">Переведено</button>
                <button type="button" class="list-group-item list-group-item-action">Не переведено</button>
            </div>
            <div style="width:90%;">
                Жанры
                <div style="overflow:scroll;height:400px;">
                    <div class="list-group list-group-flush">
                        <button type="button" class="list-group-item list-group-item-action">Ужасы</button>
                        <button type="button" class="list-group-item list-group-item-action">Роман</button>
                        <button type="button" class="list-group-item list-group-item-action">Драма</button>
                        <button type="button" class="list-group-item list-group-item-action">Эпос</button>
                        <button type="button" class="list-group-item list-group-item-action">Новелла</button>
                        <button type="button" class="list-group-item list-group-item-action">Поэма</button>
                        <button type="button" class="list-group-item list-group-item-action">Рассказ</button>
                        <button type="button" class="list-group-item list-group-item-action">Сказка</button>
                        <button type="button" class="list-group-item list-group-item-action">Эпопея</button>
                        <button type="button" class="list-group-item list-group-item-action">Повесть</button>
                        <button type="button" class="list-group-item list-group-item-action">Хроника</button>
                        <button type="button" class="list-group-item list-group-item-action">Ода</button>
                        <button type="button" class="list-group-item list-group-item-action">Романс</button>
                        <button type="button" class="list-group-item list-group-item-action">Комедия</button>
                        <button type="button" class="list-group-item list-group-item-action">Мелодрама</button>
                        <button type="button" class="list-group-item list-group-item-action">Трагедия</button>
                        <button type="button" class="list-group-item list-group-item-action">Фарс</button>
                        <button type="button" class="list-group-item list-group-item-action">Сатира</button>
                    </div>
                </div>
                Годы
                <div style="overflow:scroll;height:400px;">
                    <div class="list-group list-group-flush">
                        <button type="button" class="list-group-item list-group-item-action">1100-1200</button>
                        <button type="button" class="list-group-item list-group-item-action">1200-1300</button>
                        <button type="button" class="list-group-item list-group-item-action">1300-1400</button>
                        <button type="button" class="list-group-item list-group-item-action">1400-1500</button>
                        <button type="button" class="list-group-item list-group-item-action">1500-1600</button>
                        <button type="button" class="list-group-item list-group-item-action">1600-1700</button>
                        <button type="button" class="list-group-item list-group-item-action">1700-1800</button>
                        <button type="button" class="list-group-item list-group-item-action">1800-1900</button>
                        <button type="button" class="list-group-item list-group-item-action">1900-2000</button>
                        <button type="button" class="list-group-item list-group-item-action">2000+</button>
                    </div>
                </div>
                Страны
                <div style="overflow:scroll;height:400px;">
                    <div class="list-group list-group-flush">
                        <button type="button" class="list-group-item list-group-item-action">Франция</button>
                        <button type="button" class="list-group-item list-group-item-action">Англия</button>
                        <button type="button" class="list-group-item list-group-item-action">Россия</button>
                        <button type="button" class="list-group-item list-group-item-action">Америка</button>
                        <button type="button" class="list-group-item list-group-item-action">Греция</button>
                        <button type="button" class="list-group-item list-group-item-action">Испания</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--header-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="nav-link " data-bs-toggle="offcanvas" href="#menu" role="button" aria-controls="offcanvasExample"><h1>Читалка</h1></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item" style="width:40%">
                        <a class="nav-link " aria-current="page" href="~/">Главная</a>
                    </li>
                    <li class="nav-item" style="width:40%">
                        <a class="nav-link" href="~/Books">Список книг</a>
                    </li>
                    <li class="nav-item" style="width:40%">
                        <a class="nav-link" href="~/Users/Create">Регистрация</a>
                    </li>
                    <li class="nav-item" style="width:40%">
                        <a class="nav-link" href="~/Users/Auth">Авторизация</a>
                    </li>
                </ul>
                <form class="d-flex" style="margin-left:60%;">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>

