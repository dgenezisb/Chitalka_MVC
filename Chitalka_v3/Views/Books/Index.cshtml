@model IEnumerable<Chitalka_v3.Models.Books>



<!-- а так можно юзать методы    <a asp-action="Create">Create New</a> -->



<div class="row" style="margin-left:6%;margin-right:0%;margin-top:2%;">
@{

    foreach (var item in Model)
    {


        <div class="card" style="width: 20%;margin:1.5%;height:400px;">
            <img src="@Html.DisplayFor(modelItem => item.Image.small)" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.bookName)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.descriprionBook)</p>
                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary">Просмотреть книгу</a>
            </div>
        </div>
    }

}

</div>  