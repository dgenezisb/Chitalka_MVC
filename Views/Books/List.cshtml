
<div class="row" style="margin-left:6%;margin-right:0%;margin-top:2%;">
@{

    foreach (var book in ViewBag.Books)
    {


        <div class="card" style="width: 20%;margin:1.5%;height:400px;">
            <img src="@book.img" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@book.bookName</h5>
                <p class="card-text">@book.descriprionBook</p>
                <a href="Show/@book.id" class="btn btn-primary">Просмотреть книгу</a>
            </div>
        </div>
    }

}

</div>  
