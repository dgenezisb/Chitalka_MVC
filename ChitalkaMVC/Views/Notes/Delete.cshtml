@model ChitalkaMVC.Storage.Entities.Note

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align:center">Delete</h1>

<h3 style="text-align:center">Are you sure you want to delete this?</h3>
<div style="margin-left:2%;">
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Title
        </dt>
        <dd class = "col-sm-10">
            @Model.Title
        </dd>
        <dt class = "col-sm-2">
           Text
        </dt>
        <dd class = "col-sm-10">
           @Model.Text
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Users" asp-action="Profile">Back</a>
    </form>
</div>