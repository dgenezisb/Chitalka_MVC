@model ChitalkaMVC.Storage.Entities.Note

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center">Edit</h1>

<h4 style="text-align:center">Note</h4>
<hr />
<div class="row">
    <div style="margin:auto;display:block" class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Username" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
                <label asp-for="Text" class="control-label"></label>
                <textarea style="resize: none;" asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="margin:auto;display:block;margin-top:3%" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin:auto;display:block;width:33px">
    <a asp-controller="Users" asp-action="Profile">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}