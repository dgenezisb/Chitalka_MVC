@model ChitalkaMVC.Storage.Entities.Book

@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>
<div>
    <img src=@Model.ImagePath asp-append-version="true" style="width:50%;height:70%;"/>
    <h5>Author: <a asp-controller="Authors" asp-action="Details" asp-route-id="@Model.AuthorId" style="text-decoration:none;">@Model.Author.Name</a></h5>
    <h5>
        Genres:
        @foreach(var genre in Model.Genres)
        {
            <d>
                 @genre.Name
            </d>
        }
    </h5>
    <h5>Century: @Model.Century.Name</h5>
    <p>
        @Model.Description
    </p>
    <h5>Sample Text: </h5>
    <p>
        @Model.Text
    </p>
    @await Component.InvokeAsync("FavouriteBook", Model.Id)
</div>