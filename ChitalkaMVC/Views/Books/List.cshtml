@model BooksListViewModel

@{
    ViewData["Title"] = "Books";
}

<button class="btn btn-danger" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight" style="margin-left:45%">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;!Search!&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>

<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
  <div class="offcanvas-header">
    <h5 id="offcanvasRightLabel">!Search!</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Закрыть"></button>
  </div>
  <div class="offcanvas-body">
   <form asp-action="List">
        <input asp-for="Options.AuthorName" placeholder="Search by author" style="width:80%;margin-left:10%;margin-top:5%;"/>
        <input asp-for="Options.Title" placeholder="Search by title" style="width:80%;margin-left:10%;margin-top:5%;"/>
        <label>Genres:</label>
        <div style="margin-left:22%;margin-top:5%;">
             @await Component.InvokeAsync("ListGenres", new{aspFor="Options.GenreIds", selectedGenres=new int[]{0}})
        </div>
        <label>Centuries:</label>
        <div style="margin-left:22%;margin-top:5%;">
            @await Component.InvokeAsync("MultiListCenturies", new{aspFor="Options.CenturyIds", selectedItems=new int[]{0}})
        </div> 
       <input type="submit" value="Search" class="btn btn-primary" style="margin-left:40%;margin-top:10%;"/>
    </form>
  </div>
</div>

