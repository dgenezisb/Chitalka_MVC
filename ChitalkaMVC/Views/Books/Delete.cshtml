@model ChitalkaMVC.Storage.Entities.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img style="height: 225px; width: 225px" src=@Model.ImagePath asp-append-version="true" />
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
           Id
        </dt>
        <dd class = "col-sm-10">
           @Model.Id
        </dd>
        <dt class = "col-sm-2">
           Desc
        </dt>
        <dd class = "col-sm-10">
           @Model.Description
        </dd>
        <dt class = "col-sm-2">
           Text
        </dt>
        <dd class = "col-sm-10">
           @Model.Text
        </dd>
        <dt class = "col-sm-2">
           Author
        </dt>
        <dd class = "col-sm-10">
           @Model.Author?.Name
        </dd>
        <dt class = "col-sm-2">
           Century
        </dt>
        <dd class = "col-sm-10">
           @Model.Century?.Name
        </dd>
        <dt class = "col-sm-2">
           Genres
        </dt>
        <dd class = "col-sm-10">
         @foreach(var genre in Model.Genres)
                    {
                        <div>@genre.Name</div>
                    }</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>