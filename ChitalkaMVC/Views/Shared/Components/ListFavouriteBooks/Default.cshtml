@model IList<ChitalkaMVC.Storage.Entities.UserBook>

    <div class="row" style="margin-right:0%;margin-top:2%;">
        @foreach (var item in Model)
    {
        <div class="card" style="width: 220px;margin:1.5%;height:300px;">
            <img src=@item.Book.ImagePath class="card-img-top" style="width: 100%;height:65%;" asp-append-version="true">
            <div class="card-body">
                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Book.Id" style="text-decoration:none;">@Html.DisplayFor(modelItem => item.Book.Name)</a>
                by 
                <a asp-controller="Authors" asp-action="Details" asp-route-id="@item.Book.AuthorId" style="text-decoration:none;">@Html.DisplayFor(modelItem => item.Book.Author.Name)</a>
            </div>
        </div>
    }
    </div>