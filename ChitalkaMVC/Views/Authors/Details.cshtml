@model ChitalkaMVC.Storage.Entities.Author

@{
    ViewData["Title"] = Model.Name;
}

<h2 style="text-align:center">@Model.Name</h2>
<div style="text-align:center">
    <img src=@Model.ImagePath asp-append-version="true" style="width:500px;height:500px;"/>
    <div style="margin-left:42%">
        <ul class="list-group list-group-horizontal">
            <li class="list-group-item" style="text-align:center">
             Name: @Model.Name
            </li>
            <li class="list-group-item">
                Country: @Model.Country.Name
            </li>
        </ul>
    </div>
    
@*    <p>
        @Model.Description
    </p>*@
    <h4>Books:</h4>
    <div class="row" style="margin-left:0%;margin-right:0%;margin-top:1%;">
@{
    if(Model.Books!=null)
    foreach (var item in Model.Books)
    {
        <div class="card" style="width: 220px;margin:1.5%;height:350px;">
            <img src=@item.ImagePath class="card-img-top" style="width: 100%;height:65%;" asp-append-version="true">
            <div class="card-body">
                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" style="text-decoration:none;">@Html.DisplayFor(modelItem => item.Name)</a>
                by
                <a asp-controller="Authors" asp-action="Details" asp-route-id="@item.AuthorId" style="text-decoration:none;">@Html.DisplayFor(modelItem => item.Author.Name)</a>
                <br/>Genres:
                @{
                        int i;
                        for(i=0;i<4&&i<item.Genres.Count;i++)
                        {
                            <d>
                            @item.Genres[i].Name
                            </d>
                        }
                        if (i < item.Genres.Count)
                        {
                            <d>
                            ...
                            </d>
                        }
                    } 
            </div>
        </div>
    }

}

</div>  
</div>